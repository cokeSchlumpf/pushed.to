extends layout

include mixins

block page_parameters
  - var page_title = post.title + ' | ' + blog.title
  - var page_url = 'https://pushed.to' + post.url
  - var page_subtitle = blog.url

block page_content
  .grid(name="top")
    .row
      .col-sm-8
        article.pt-article
          h2= post.title

          p.pt-meta Posted on #{post.publishedDate}           

          p
            a.badge.badge-secondary(href='#') #topic-1
            | 
            a.badge.badge-secondary(href='#') #topic-2

          div.pt-article-content
            != post.contentSnippet
            != post.content

        footer.grid.pt-paging
          .row
            .col.pt-prev
              a(href=blog.url) &#8592; Read more from #{blog.title}

            .col.pt-pages
              
            .col.pt-next
              a(href="#top") &#8593; Go to top
      
      .col-sm-2.order-sm-first
        + about(blog)

      .col-sm-2